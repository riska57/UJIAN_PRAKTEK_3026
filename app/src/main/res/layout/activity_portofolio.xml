<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PortofolioActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="225dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="#ef6e46">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/portfolio"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PORTOFOLIO"
                android:textSize="35sp"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150sp"
                app:srcCompat="@drawable/portofolio_1"/>

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" https://tobiasahlin.com/"
                android:autoLink="web"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Personal Website"
                android:textStyle="bold"
                android:textSize="25sp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150sp"
                app:srcCompat="@drawable/portofolio_2"/>

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" https://transjakarta.co.id/"
                android:autoLink="web"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transportation Website"
                android:textStyle="bold"
                android:textSize="25sp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150sp"
                app:srcCompat="@drawable/portofolio_3"/>
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  https://demakkab.go.id/"
                android:autoLink="web"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Goverment Website"
                android:textStyle="bold"
                android:textSize="25sp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150sp"
                app:srcCompat="@drawable/portofolio_4"/>
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  https://semesta.sch.id/"
                android:autoLink="web"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Education Website"
                android:textStyle="bold"
                android:textSize="25sp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150sp"
                app:srcCompat="@drawable/portofolio_5"/>
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  https://visitingjogja.jogjaprov.go.id/"
                android:autoLink="web"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tourism Website"
                android:textStyle="bold"
                android:textSize="25sp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>